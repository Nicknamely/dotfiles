[Unit]
Description=Cliphist Listener for text and images
PartOf=graphical-session.target
After=graphical-session.target

[Service]
ExecStart=/bin/sh -c "wl-paste --type text --watch cliphist store & wl-paste --type image --watch cliphist store"
Restart=on-failure
RestartSec=5

[Install]
WantedBy=graphical-session.target
