# --- Essential environment variables ---
# export PATH="$HOME/bin:$HOME/go/bin:$HOME/.local/share/pnpm:$PATH"
# export PNPM_HOME="$HOME/.local/share/pnpm"

# --- Set default editor ---
export EDITOR="nvim"

# --- Set screenshot directory for grim ---
# export GRIM_DEFAULT_DIR="$HOME/Media/Pictures/Screenshots"

# --- Set QEMU/libvirt default URI ---
export LIBVIRT_DEFAULT_URI="qemu:///system"

# --- Prevent duplicate entries in history ---
export HISTCONTROL="ignoredups"

# --- Set Zcompdump cache location ---
export ZSH_COMPDUMP="${XDG_CACHE_HOME:-$HOME/.cache}/zsh/zcompdump"

# --- Done ---
